<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".SelectCategory"
    android:onClick="@string/hello_world">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:id="@+id/loOne"
        android:backgroundTint="#ffa594ff">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal|top"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.25" >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Close"
                    android:id="@+id/btn1"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_vertical"
                    android:clickable="true"
                    android:layout_weight="0.125" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="two"
                    android:id="@+id/btn2"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.125" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.25" >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="three"
                    android:id="@+id/btn3"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_vertical"
                    android:clickable="true"
                    android:layout_weight="0.125" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="four"
                    android:id="@+id/btn4"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_vertical"
                    android:clickable="true"
                    android:layout_weight="0.125" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.22" >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="five"
                    android:id="@+id/btn5"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_vertical"
                    android:clickable="true"
                    android:layout_weight="0.125"
                    android:background="#ffff6432"
                    android:focusable="false"
                    android:accessibilityLiveRegion="@integer/abc_max_action_buttons"
                    android:hint="for buglary"
                    android:outlineProvider="background" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="six"
                    android:id="@+id/btn6"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_vertical"
                    android:clickable="true"
                    android:layout_weight="0.125"
                    android:outlineProvider="background"
                    android:longClickable="false" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.25">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="SOS"
                    android:id="@+id/btn7"
                    android:clickable="true"
                    android:layout_margin="10dp"
                    android:background="#ffff0000"
                    android:textColor="#ff000000"
                    android:textColorHighlight="#ff000000"
                    android:textSize="25dp"
                    android:longClickable="true" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>
